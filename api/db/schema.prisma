datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Country {
  id       Int    @id @default(autoincrement())
  name_en  String
  name_ja  String
  iso_code String
}

model League {
  id               Int      @id @default(autoincrement())
  level            Int      @default(1)
  name_en          String
  name_ja          String
  date_established DateTime
}

model ClubTeam {
  id               Int      @id @default(autoincrement())
  name_en          String
  name_ja          String
  date_established DateTime
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}
